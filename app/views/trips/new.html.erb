<%= form_with url: '/trips', method: :post, local: true do |form| %>

  <p> <%= form.label :name, "Name your Adventure:" %>
  <%= form.text_field :name, required: true %> </p>

  <p> <%= form.label :departure_date, "When are you leaving?" %>
  <%= form.datetime_local_field :departure_date, min: Date.today, required: true %> </p>

  <%= form.hidden_field :arrival_date, value: "2024-11-10T13:37:38.000Z" %>

<h3> Departure Address </h3>

  <p> <%= form.label :start_address, "Street Address" %>
  <%= form.text_field :start_address, required: true %> </p>

  <p> <%= form.label :start_city, "City" %>
  <%= form.text_field :start_city, required: true %> </p>

  <p> <%= form.label :start_state, "State" %>
  <%= form.select :start_state, options_for_select(us_states, "CO"), required: true %> </p>

  <p> <%= form.label :start_zipcode, "Zip Code" %>
  <%= form.number_field :start_zipcode, min: 0, max: 99999, required: true  %> </p>

  <%= form.hidden_field :start_point, value: 0 %>

<h3> Arrival Address </h3>

  <p> <%= form.label :end_address, "Street Address" %>
  <%= form.text_field :end_address, required: true %> </p>

  <p> <%= form.label :end_city, "City" %>
  <%= form.text_field :end_city, required: true %> </p>

  <p> <%= form.label :end_state, "State" %>
  <%= form.select :end_state, options_for_select(us_states, "CO"), required: true %> </p>

  <p> <%= form.label :end_zipcode, "Zip Code" %>
  <%= form.number_field :end_zipcode, min: 0, max: 99999, required: true  %> </p>
  
  <%= form.hidden_field :end_point, value: 2 %>


  <p> <%= form.submit "Create Trip" %> </p>

<% end %>
