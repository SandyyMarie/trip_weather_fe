<%= form_with url: "/trips/#{@trip.id}", method: :put, local: true do |form| %>

  <p> <%= form.label :name, "Name your Adventure:" %>
  <%= form.text_field :name, value: @trip.name, required: true %> </p>

  <p> <%= form.label :departure_date, "When are you leaving?" %>
  <%= form.datetime_local_field :departure_date, min: Date.today, value: @trip.departure_date, required: true %> </p>

  <%= form.hidden_field :arrival_date, value: "2024-11-10T13:37:38.000Z" %>

  <p> <%= form.submit "Update Trip" %> </p>

<% end %>
